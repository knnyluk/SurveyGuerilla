<img id="fist" src="/img/completion_fist.jpg" style="display:none;">
<div id="main">
  <div class="header">
    <h1><%= @survey.title %></h1>
    <!--  <h2> @survey.description </h2> -->
  </div>
  <div class="content">
    <form action="" method="POST" id="survey_page">
      <ul>
        <% @survey.questions.each do |q| %>
        <li id="survey_questions"><%= q.text %></li>

        <% q.answers.each_with_index do |a,i| %>
        <input type="radio" name="post[answer_<%= q.id %>]" value="<%= a.id %>" ><span id="answer_option"><%= a.text %></span>
        <br>
        <% end %>
        <br>
        <br>
        <% end %>
      </ul>
      <input type="submit" value="Submit">
    </form>
  </div>
  </div>
</div>

